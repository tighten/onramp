{
    "name": "tightenco/onramp",
    "type": "project",
    "description": "Onramp to Laravel.",
    "keywords": [
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "erusev/parsedown": "^1.7",
        "kg-bot/laravel-localization-to-vue": "dev-l12-compatibility@dev",
        "laravel/framework": "^12.53",
        "laravel/nova": "^4.35.11",
        "laravel/slack-notification-channel": "^3.4",
        "laravel/socialite": "^5.17",
        "laravel/tinker": "^2.10.1",
        "laravel/ui": "^4.6",
        "larswiegers/laravel-translations-checker": "^0.9",
        "spatie/laravel-ignition": "^2.9",
        "spatie/laravel-translatable": "^6.11",
        "spatie/nova-translatable": "^4.1",
        "tightenco/ziggy": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-ide-helper": "^3.5",
        "beyondcode/laravel-dump-server": "^2.1",
        "brianium/paratest": "^7.5",
        "fakerphp/faker": "^1.23",
        "filp/whoops": "^2.15",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3",
        "tightenco/duster": "^v2.7.5",
        "laravel/pail": "^1.2.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": {
        "nova": {
            "type": "composer",
            "url": "https://nova.laravel.com"
        },
        "0": {
            "type": "composer",
            "url": "https://nova.laravel.com"
        },
        "1": {
            "type": "path",
            "url": "./nova-components/SuggestedResourcesShortcuts"
        },
        "2": {
            "type": "vcs",
            "url": "https://github.com/laravel-shift/laravel-localization-to-vue.git"
        }
    },
    "suggest": {
        "laravel/nova": "Administration panel for Laravel.",
        "spatie/nova-translatable": "A Laravel Nova field for spatie/laravel-translatable.",
        "tightenco/nova-releases": "Keep on top of Nova Releases.",
        "tightenco/suggested-resources-shortcuts": "Shortcut card for suggesting resources."
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] || composer require laravel/nova:^4.35.11 spatie/nova-translatable spatie/laravel-translatable tightenco/nova-releases tightenco/suggested-resources-shortcuts"
        ],
        "lint": [
            "vendor/bin/duster lint"
        ],
        "fix": [
            "vendor/bin/duster fix"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    }
}
